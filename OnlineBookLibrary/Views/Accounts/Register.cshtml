@model OnlineBookLibrary.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Kindle: Register</title>
    <!-- <link href="../style.css" rel="stylesheet"> -->
</head>

<body>
    <div class="mt-8">
        <div class="flex justify-center">
            <div class="mt-5 md:col-span-2 md:mt-0">
                <h2 class="block text-3xl font-medium text-gray-700">Register: </h2>
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }
                    </div>
                    <div class="mt-8 overflow-hidden shadow sm">
                        <div class="bg-white px-4 py-5 sm:p-6 w-[600px]">
                            <div class="grid grid-cols-6 gap-6">
                                
                                <div class="col-span-6 sm:col-span-3">
                                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700">Name</label>
                                    <input asp-for="UserName"
                                           class="mt-1 h-8 outline-none block w-full border-gray-300 shadow-sm ">
                                </div>

                                <div class="col-span-6 sm:col-span-3">
                                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700">Phone</label>
                                    <input asp-for="Phone"
                                           class="mt-1 h-8 outline-none block w-full border-gray-300 shadow-sm ">
                                </div>

                                <div class="col-span-6 sm:col-span-3">
                                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                                    <input asp-for="Email"
                                            class="mt-1 h-8 outline-none block w-full border-gray-300 shadow-sm ">
                                    
                                </div>

                                <div class="col-span-6 sm:col-span-3">
                                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                                    <input type="password" asp-for="Password"
                                           class="mt-1 h-8 outline-none block w-full border-gray-300 shadow-sm ">
                                </div>
                                <div class="col-span-6">
                                    <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
                                    <input asp-for="Address"
                                           class="mt-1 h-8 outline-none block w-full border-gray-300 shadow-sm ">
                                </div>
                            </div>
                        </div>
                        <div class="bg-gray-50 px-4 py-3 sm:px-6">
                            <button class="rounded-md inline-flex justify-center border border-transparent bg-orange-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2">
                                <input type="submit" value="Sign Up" />
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>