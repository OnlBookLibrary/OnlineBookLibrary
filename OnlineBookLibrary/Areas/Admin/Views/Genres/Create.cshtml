@model OnlineBookLibrary.Models.Genre

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="padding-top: 100px;  min-height: 80vh">
    <div class="row">
        <div class="col-md-12">
            <h1>Create Roles</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <dt>Genre Name</dt>
                            <input asp-for="GenreName" class="form-control" />
                            <span asp-validation-for="GenreName" class="text-danger"></span>
                        </div>
                        <div style ="padding-top:10px; padding-bottom:10px">
                            <button type="submit" value="Create" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-primary"><a asp-action="Index" style="color: white">Back to List</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>