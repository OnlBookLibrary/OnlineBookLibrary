@model OnlineBookLibrary.Models.Genre

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="padding-top: 100px;  min-height: 80vh">
    <div class="row">
        <div class="col-md-12">
            <h1>Detail Genres</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>Genre Name</dt>
                <dd>
                    @Html.DisplayFor(model => model.GenreName)
                </dd>
            </dl>
        </div>
        <div style="padding-top:10px; padding-bottom:10px">
            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.GenreId">Edit</a>
            <button type="button" class="btn btn-primary"><a asp-action="Index" style="color: white">Back to List</a></button>
        </div>
    </div>
</div>
