@model OnlineBookLibrary.Models.Book

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container" style="padding-top: 100px;  min-height: 80vh">
    <div class="row">
        <div class="col-md-12">
            <h1>Create Books</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <dt>Title</dt>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <dt>Author</dt>
                            <input asp-for="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <dt>Description</dt>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top:10px; padding-bottom:10px">
                            <dt>Image</dt>
                            <input asp-for="ImageFile" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <dt>Price</dt>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top:10px; padding-bottom:10px">
                            <label asp-for="Status" class="control-label"></label>
                            <select class="custom-select" asp-for="Status" style="min-width: 200px;">
                                <option selected>Còn Hàng</option>
                                <option>Hết Hàng</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <dt>Genre</dt>
                            <select asp-for="GenreId" class="form-control" asp-items="ViewBag.TheLoai"></select>
                        </div>
                        <div style ="padding-top:10px; padding-bottom:10px">
                            <button type="submit" value="Create" class="btn btn-success">Save</button>
                            <button type="button" class="btn btn-primary"><a asp-action="Index" style="color: white">Back to List</a></button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>